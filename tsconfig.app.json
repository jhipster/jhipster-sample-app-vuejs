{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/main/webapp//**/*", "src/main/webapp/app/**/*.vue"],
  "exclude": ["src/main/webapp/app/**/*.spec.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": "src/main/webapp/app",
    "outDir": "target/out-tsc/dist",
    "paths": {
      "@/*": ["./src/main/webapp/app/*"]
    }
  }
}
